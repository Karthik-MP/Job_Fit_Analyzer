{
  "manifest_version": 3,
  "name": "Job Fit Analyzer",
  "version": "1.0",
  "description": "Analyzes job descriptions for fit based on education and visa requirements",
  "permissions": [
    "sidePanel", "activeTab", "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open Sidebar"
  },
  "side_panel": {
    "default_path": "index.html"
  }
}